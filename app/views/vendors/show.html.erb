<div class="bradcam_area bradcam_bg_3">
  <div class="container">
    <div class="row">
      <div class="col-xl-12">
        <div class="bradcam_text text-center">
          <div class="icon">
            <i class="flaticon-food"></i>
          </div>
          <h4><%= @vendor.name %></h4>
          <p><%= @vendor.place %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="listing_details">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-8">
        <div class="single_details">
          <h3><%= t "views.vendors.description" %></h3>
          <p><%= @vendor.introduction %></p>
        </div>
        <div class="single_details">
          <h3><%= t "views.vendors.loca" %></h3>
          <div class="map_Wrap">
            <div class="d-sm-block ">
              <div class="map_inner_info">
                <div id="map" ></div>
                <div class="explorer_info">
                  <%= @vendor.place %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="single_details">
          <h3><%= t "views.vendors.contact" %></h3>
          <div class="col-lg-12 p-0">
            <div class="explorer_info">
              <ul>
                <li> <i class="fa fa-phone"></i>
                <%= @vendor.phone %></li>
                <li><i class="fa fa-envelope"></i><%= @vendor.email %></li>
              </ul>
            </div>
            <% if can? [:update, :destroy], @vendor %>
              <%= link_to t("views.vendors.edit"), edit_vendor_path(@vendor) %><br>
              <%= link_to t("views.vendors.delete"), @vendor, method: :delete, data: { confirm: t("views.vendors.sure") } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>   
</div> 
<div class="explorer_europe list_wrap">
  <div class="container">
    <div class="row">
      <div class="col-xl-4 col-lg-4"></div>
      <div class="col-xl-8 col-lg-8">
        <h3 class="exp_title"><%= @service_of_vendors.count %> <%= t "views.vendors.avaiable" %></h3>
        <div class="row">
          <%= render @service_of_vendors %>
          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
      </div>
    </div>
  </div>
</div>